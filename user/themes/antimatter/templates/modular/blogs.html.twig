{% set collection = page.collection() %}

<div class="modular-row blogs {{ page.header.class}}">

	{% for page in collection %}
	{% set blog_image = page.media['hero.jpg'].contrast(20).brightness(+30) %}

	<div class="grid-item wow zoomIn" style="background-image: url({{ blog_image.url }});">

		<a href="{{ page.url }}" class="grid-title">
			<div>
				<h2>{{ page.title }}</h2>
				<time class="dt-published" datetime="{{ page.date|date("c") }}">
	                <span>{{ page.date|date("d") }}</span>
                <em>{{ page.date|date("M") }}</em>
            </time>
			</div>
		</a>
	</div>
    {% endfor %}

</div>
